make()
{
    LSAJOIN_SOURCES="\
	join.c           \
	ldaputil.c       \
	leave.c          \
	lsakrb5smb.c     \
	lsaldap.c        \
	keytab.c         \
	ktldap.c"

    LSAJOIN_HEADERDEPS="\
        openssl/rand.h dce/rpc.h gssapi.h \
        lwadvapi.h lw/base.h uuid/uuid.h ldap.h lwnet.h"

    mk_group \
	GROUP="lsajoin" \
	SOURCES="$LSAJOIN_SOURCES" \
	CPPFLAGS="-DLW_ENABLE_THREADS" \
	INCLUDEDIRS="include ../../../../include ../../../include" \
	HEADERDEPS="$LSAJOIN_HEADERDEPS" \
	LIBDEPS="lsacommon lsarpc lwnetclientapi"
}