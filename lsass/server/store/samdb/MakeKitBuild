make()
{
    SAMDB_SOURCES="\
        samdbadd.c        \
        samdbattrlookup.c \
        samdbbind.c       \
        samdbclose.c      \
        samdbcontext.c    \
        samdbcounter.c    \
        samdbdel.c        \
        samdbdn.c         \
        samdbglobals.c    \
        samdbgroup.c      \
        samdbinit.c       \
        samdbmisc.c       \
        samdbmodify.c     \
        samdbopen.c       \
        samdbschema.c     \
        samdbsearch.c     \
        samdbtrans.c      \
        samdbuser.c       \
        samdbsecurity.c"

    mk_dlo \
	DLO=libsamdb \
	SOURCES="$SAMDB_SOURCES" \
	INCLUDEDIRS=". ../include ../../include ../../../include" \
	HEADERDEPS="sqlite3.h openssl/md4.h uuid/uuid.h lw/base.h lwio/lwio.h lwadvapi.h" \
	LIBDEPS="uuid lwbase sqlite3 crypto dsapi" \
        SYMFILE="samdb.sym"
}