<?xml version="1.0"?>
<project>
  <target name="local.build">
    <delete failonerror="false">
      <fileset>
        <include name="${build.meta.current}/*.ilk" />
        <include name="${build.meta.current}/*.obj" />
        <include name="${build.meta.current}/*.pdb" />
        <include name="${build.meta.current}/*.exe" />
      </fileset>      
    </delete>
    <cl outputdir="${build.meta.current}/">
      <defines>
        <define name="UNICODE"/>
        <define name="_UNICODE"/>
        <define name="WIN32_LEAN_AND_MEAN"/>
      </defines>
      <sources>
        <include name="*.c"/>
      </sources>
    </cl>
    <link output="${build.meta.current}/sspi-server.exe" options="/DEBUG /DEBUGTYPE:cv Ws2_32.lib secur32.lib" pdbfile="${build.meta.current}/sspi-server.pdb">
      <sources basedir="${build.meta.current}/">
        <include name="*.obj"/>
      </sources>
    </link>
  </target>
</project>
